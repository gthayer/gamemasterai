generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env(DATABASE_URL)
}

model StatBlock {
  ID       Int     @id @default(autoincrement())
  prompt   String? @db.VarChar(300)
  response String? @db.VarChar(8000)
  model String?
  user Int 
  rating String
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}